  <!--      	<core:Fragment fragmentName="srf.view.fragment.environments.Favorites" type="XML" width="100%"/>-->
		<!--</Panel>-->

 
    	<Panel expandable="true" expanded="true" headerText="{i18n>mcDeskBrowsers} ({testDetails>/environments/length})" width="auto"  
    		visible="{mcEnv>/browsers/existing}"
			backgroundDesign="Transparent" class="sapUiTinyMarginTop" >
        	<core:Fragment  fragmentName="srf.view.fragment.environments.TestEnv.DesktopBrowsers" type="XML" width="100%"/>
		</Panel>
		
    	<Panel expandable="true" expanded="true" headerText="{i18n>mcMobileDevices} ({mcEnv>/mobiles/count})" width="auto"  
    		visible="{mcEnv>/mobiles/existing}"
			backgroundDesign="Transparent" class="sapUiTinyMarginTop" >
    		
			<core:Fragment fragmentName="srf.view.fragment.environments.TestEnv.MobileDevices" visible="{mcEnv>/mobiles/devices/existing}" type="XML" width="100%"/>
   			<core:Fragment fragmentName="srf.view.fragment.environments.TestEnv.SpecificDevices" visible="{mcEnv>/mobiles/specificdevices/existing}" type="XML" width="100%"/>
 		</Panel>

   		<Panel expandable="true" 
   			expanded="true" 
   			headerText="{i18n>mcApplications}  ({mcEnv>/applications/count})" 
   			width="auto"  
    		visible="{mcEnv>/applications/existing}"
			backgroundDesign="Transparent" class="sapUiTinyMarginTop" >
   			<core:Fragment fragmentName="srf.view.fragment.environments.TestEnv.Applications" visible="{environments>/environments/srf}" type="XML" width="100%"/>
 		</Panel>

</core:FragmentDefinition>