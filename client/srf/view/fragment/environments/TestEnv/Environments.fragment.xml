        <Toolbar width="100%" design="Transparent" class="srfTransparent">
            <ToolbarSpacer />
            <Button text="{ parts: [ {path: 'mcEnv>/browsers/existing'}, 
            						 {path: 'mcEnv>/mobiles/existing'}, 
            						 {path: 'mcEnv>/applications/existing'}],
							   formatter: '.formatter.addEnvironmentsBtnText'	}" 
				    class="srfDefaultBtnColor"
            		tooltip="{i18n>addEnvironmentTooltip}" 
            		press="onAddNewEnvDlgOpen" />    
